<% layout("layouts/boilerplate") %>
    <h1>List of Stadiums in India</h1>
    <ul></ul>
    <%for (let stadium of stadiums){%>
        <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="<%=stadium.image%>" class="img-fluid rounded-start" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%=stadium.name%></h5>
                  <p class="card-text"><small class="text-muted"><%=stadium.location%></small></p>
                  <p class="card-text"><%=stadium.description%></p>
                  <a href="/Stadiums/<%=stadium.id%>" class="btn btn-primary">View More</a>
                </div>
              </div>
            </div>
          </div>
    <%}%>
    </ul>  
    
  

   